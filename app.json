{
  "expo": {
    "name": "AI Notes: Write & Reply",
    "slug": "ai-notes-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.taptapcreate.ainotes",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs microphone access to record voice notes",
        "NSCameraUsageDescription": "This app needs camera access to capture images for note extraction",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to select images"
      }
    },
    "android": {
      "package": "com.taptapcreate.ainotes",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-3940256099942544~3347511713",
          "iosAppId": "ca-app-pub-3940256099942544~1458002511"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow AI Notes to access your microphone for voice notes."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow AI Notes to access your photos for note extraction.",
          "cameraPermission": "Allow AI Notes to use your camera for capturing images."
        }
      ],
      "expo-secure-store"
    ]
  }
}